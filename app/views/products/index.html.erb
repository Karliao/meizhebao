
<%= render :partial => "shop_header" %>

<div class="products">
    <% @products.each do |product| %>
        <%= link_to(product_path(product), { :class => "col-md-4" }) do %>
        <div class="thumbnail">
        	<% if product.has_images? %>
            	<%= image_tag(product.head_image.common.url) %>
        	<% else %>
        		<%= image_tag("http://placehold.it/300x300&text=No Pic") %>
        	<% end %>
            <div class="caption">
                <h3>Â¥<%= product.price %></h3>
                <p><%= product.title %></p>
            </div>
        </div>
        <% end %>
    <% end %>
</div>
   
