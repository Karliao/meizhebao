<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

	<div class="group">
		<%= f.input :title %>
	</div>

	<div class="group">
		<%= f.input :description %>
	</div>

	<div class="group">
		<%= f.input :quantity %>
	</div>

	<div class="group">
		<%= f.input :price %>
	</div>

	<div class="gorup">
		<%= f.input :category_id, collection: dress_category.leaves %>
	</div>
	
	<div class="group">
	    <%#= f.input :image, as: :file %>
	    <%#= f.label :image %><br>
	    <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>
  	</div>

	<%= f.submit "Submit", data: { disable_with: "Submiting..." } %>

<% end %>