<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

	<div class="group">
		<%= f.input :title %>
	</div>

	<div class="group">
		<%= f.input :description %>
	</div>

	<div class="group">
		<%= f.input :price %>
	</div>

	<div class="gorup">
		<%= f.input :category_id, collection: dress_category.leaves %>
	</div>
	
	<div class="group">
	    <%#= f.input :image, as: :file %>
	    <%#= f.label :image %><br>
	    <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>
  	</div>

  	<div class="group">
  		<%= f.label :friendly_id %>
  		<%= f.text_field :friendly_id, :required => true, :class => "form-control" %>
  		<p>限小写英树枝及横线， 将作为网址的一部分</p>
  	</div>

  	<%= f.nested_fields_for :variants do |ff| %>
  		<filedset style="border-left: 5px solid #bbb; margin-bottom: 10px; padding: 10px;">
  			<legend>Variant</legend>
  			<div class="form-group">
  				<%= ff.label :color %>
  				<%= ff.text_field :color, :class => "form-control" %>
  			</div>

  			<div class="form-group">
  				<%= ff.label :size %>
  				<%= ff.text_field :size, :class => "form-control" %>
  			</div>

  			<%= ff.fields_for :price do |fff| %>
  				<div class="form-group">
  					<%= fff.label :current %>
  					<%= fff.text_field :current, :class => "form-control" %>
  				</div>
  				<div class="from-group">
  					<%= fff.label :origin %>
  					<%= fff.text_field :origin, :class => "form-control" %>
  				</div>
  			<% end %>

  		</filedset>
  		<%= ff.remove_nested_fields_link "移除产品规格", :class => "btn btn-danger" %>
  	<% end %>
  	<p class="text-right">
  		<%= f.add_nested_fields_link :variants, "新增产品规格", :class => "btn btn-default" %>
  	</p>

	<%= f.submit "Submit", data: { disable_with: "Submiting..." } %>

<% end %>